<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_are_sure_textView_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_are_sure_imageView_quit" />

    <TextView
        android:id="@+id/dialog_are_sure_textView_message_supp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_are_sure_textView_message" />

    <TextView
        android:id="@+id/dialog_are_sure_confirmation_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size_normal"
        android:gravity="center"
        android:text="Are you sure ?"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="@+id/dialog_are_sure_textView_message"
        app:layout_constraintStart_toStartOf="@+id/dialog_are_sure_textView_message"
        app:layout_constraintTop_toBottomOf="@+id/dialog_are_sure_textView_message_supp" />

    <Button
        android:id="@+id/dialog_are_sure__button_yes"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size_normal"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_are_sure_button_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_are_sure_confirmation_text" />

    <Button
        android:id="@+id/dialog_are_sure_button_no"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size_normal"
        android:text="No"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dialog_are_sure__button_yes"
        app:layout_constraintTop_toBottomOf="@+id/dialog_are_sure_confirmation_text" />

    <ImageView
        android:id="@+id/dialog_are_sure_imageView_quit"
        android:layout_width="@dimen/icon_size_normal"
        android:layout_height="@dimen/icon_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>